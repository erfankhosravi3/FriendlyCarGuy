        {"name": "Channel", "type": "Single select", "options": ["Organic", "Paid", "Social", "Direct", "Referral"]},
        {"name": "Active", "type": "Checkbox", "description": "Still using"},
        {"name": "Monthly Cost", "type": "Currency", "description": "Ad spend"},
