        {"name": "Due Time", "type": "Single line text", "description": ""},
        {"name": "Priority", "type": "Single select", "options": ["Low", "Normal", "High", "Urgent"]},
        {"name": "Status", "type": "Single select", "options": ["Pending", "In Progress", "Done", "Skipped"]},
        {"name": "Outcome", "type": "Long text", "description": "What happened"},
        {"name": "Created", "type": "Created time", "description": ""},
        {"name": "Completed", "type": "Date and time", "description": ""}
      ]
    },
    {
      "table_name": "Appointments",
      "description": "Scheduled meetings and test drives",
      "fields": [
        {"name": "Person", "type": "Link to another record", "linked_table": "People"},
        {"name": "Type", "type": "Single select", "options": ["Test Drive", "Showroom Visit", "Phone Call", "Coffee/Meal", "Delivery", "Follow-up Meeting", "Other"]},
        {"name": "Vehicle", "type": "Link to another record", "linked_table": "Inventory"},
        {"name": "Date", "type": "Date", "description": ""},
        {"name": "Time", "type": "Single line text", "description": ""},
        {"name": "Duration", "type": "Number", "description": "Minutes"},
        {"name": "Location", "type": "Single line text", "description": "Where"},
